<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hamza.bestin.MyList"
    android:orientation="vertical"
    android:background="@android:color/background_dark">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/randomSelect"
            android:text="Random"
            android:onClick="randomselect"
            android:background="@android:color/darker_gray" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/suggestSelection"
            android:text="Suggest"
            android:layout_marginLeft="100dp"
            android:onClick="givesuggestion"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myMovieList"
        android:smoothScrollbar="true"
        android:footerDividersEnabled="true"
        android:divider="#fffafdf4"
        android:dividerHeight="0.5dp"
        android:drawSelectorOnTop="true" />


</LinearLayout>
